<Window x:Class="MultiPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiPlayer"
        xmlns:shdrs="clr-namespace:MultiPlayer.UIShaders"
        xmlns:custom="clr-namespace:MultiPlayer.TestClasses"
        xmlns:customUI="clr-namespace:MultiPlayer.UILements"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Window.Resources>
        <custom:VMTest x:Key="uitestdata"/>

        <BitmapImage x:Key="SpriteMap" UriSource="GFX/Controls.png"/>
        <Style x:Key="SpriteIcon" TargetType="Image">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Source">
                <Setter.Value>
                    <CroppedBitmap Source="{StaticResource SpriteMap}"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style BasedOn="{StaticResource SpriteIcon}" TargetType="Image" x:Key="Icon1">
            <Setter Property="Source">
                <Setter.Value>
                    <CroppedBitmap Source="{StaticResource SpriteMap}" SourceRect="0,0,128,128"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style BasedOn="{StaticResource SpriteIcon}" TargetType="Image" x:Key="Icon2">
            <Setter Property="Source">
                <Setter.Value>
                    <CroppedBitmap Source="{StaticResource SpriteMap}" SourceRect="128,0,128,128"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style BasedOn="{StaticResource SpriteIcon}" TargetType="Image" x:Key="Icon3">
            <Setter Property="Source">
                <Setter.Value>
                    <CroppedBitmap Source="{StaticResource SpriteMap}" SourceRect="256,0,128,128"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style BasedOn="{StaticResource SpriteIcon}" TargetType="Image" x:Key="Icon4">
            <Setter Property="Source">
                <Setter.Value>
                    <CroppedBitmap Source="{StaticResource SpriteMap}" SourceRect="384,0,128,128"/>
                </Setter.Value>
            </Setter>
        </Style>

        <shdrs:GrayscaleFX x:Key="gayscale"/>
    </Window.Resources>
    
    <Grid DataContext="{StaticResource ResourceKey=uitestdata}">
        <StackPanel>
            <StackPanel>
                <Label>Modules</Label>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"></ColumnDefinition>
                        <ColumnDefinition Width="5*"></ColumnDefinition>
                        <ColumnDefinition Width="45*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0" x:Name="modulesDropbox"></ComboBox>
                    <Button Grid.Column="1" Margin="8,0">+</Button>
                </Grid>
            </StackPanel>

            <Grid>
                <ListView x:Name="itemStatus" ItemsSource="{Binding ActiveModules}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="20, 12" Background="Gray" Width="960">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="33*"></ColumnDefinition>
                                        <ColumnDefinition Width="33*"></ColumnDefinition>
                                        <ColumnDefinition Width="33*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Grid Grid.Row="0">
                                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                                            <Label Content="{Binding Name}" FontWeight="Bold" FontSize="20" VerticalAlignment="Center"></Label>
                                            <Label Content="{Binding Path=ModuleV, StringFormat='v{0}'}" Margin="20,0" VerticalAlignment="Center"></Label>
                                        </StackPanel>
                                    </Grid>
                                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                                        <!--<customUI:StatusBulb Status="{Binding Status}" StatusText="{Binding Status}"></customUI:StatusBulb>-->
                                        <customUI:StatusBulb Status="{Binding Status}" StatusText="{Binding Name}"></customUI:StatusBulb>
                                        <Label Content="{Binding PlayerCtDisplay}" BorderThickness="1" BorderBrush="LightGray" VerticalAlignment="Center" Padding="15,4" Margin="60,0"></Label>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1" Background="Green">
                                        <Image Style="{StaticResource Icon1}" Margin="10, 0" MouseDown="PlayClicked"/>
                                        <Image Style="{StaticResource Icon2}" Margin="10, 0" MouseDown="PauseClicked">
                                            <Image.Effect>
                                                <StaticResource ResourceKey="gayscale"/>
                                            </Image.Effect>
                                        </Image>
                                        <Image Style="{StaticResource Icon3}" Margin="10, 0" MouseDown="PauseClicked"/>
                                        <Image Style="{StaticResource Icon4}" Margin="50, 0" MouseDown="RemoveClicked"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" HorizontalAlignment="Right" Width="100">
                                        <Label Content="{Binding IPPortDisplay}"></Label>
                                        <Label Content="{Binding FPS}" ContentStringFormat="FPS: {0}"></Label>
                                        <Label Content="{Binding CPU}" ContentStringFormat="CPU: {0} %"></Label>
                                        <Label Content="{Binding RAM}" ContentStringFormat="RAM: {0} MB"></Label>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
