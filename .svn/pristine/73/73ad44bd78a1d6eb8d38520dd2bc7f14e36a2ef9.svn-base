<Window x:Class="ConnTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnTester"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
          <StackPanel Orientation="Horizontal" Grid.Row="0">
            <StackPanel Width="150">
                <Label>IP</Label>
                <TextBox x:Name="ipField"></TextBox>
                <Button Height="18" Width="80" Margin="10,5" Click="SetIpToLocal">Use Localhost</Button>
            </StackPanel>
            <Label>:</Label>
            <StackPanel Width="50">
                <Label>Port</Label>
                <TextBox x:Name="portField"></TextBox>
            </StackPanel>
              
            <StackPanel Margin="50, 10">
                <Grid x:Name="useTcpInd">
                    <Button Margin="10" Click="TCP_Connect">Use TCP/IP</Button>
                </Grid>
                <Grid x:Name="useUdpInd">
                    <Button Margin="10" Click="UPD_Connect">Use UDP</Button>
                </Grid>
            </StackPanel>

            <StackPanel VerticalAlignment="Center">
                <Button Click="OnDestroyClick" Width="100">X → Destroy conn</Button>
            </StackPanel>

        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <StackPanel Width="400">
                <Label>Data</Label>
                <TextBox x:Name="dataToSend">Test string</TextBox>
            </StackPanel>

            <Button Click="OnSendClick" Margin="20, 15, 60, 15" Width="80">Send</Button>
            <Button Click="OnServerDisconnectClick" Margin="20, 15">Disconnect</Button>
            <Button Click="OnReconnectClick" Margin="20, 15">Reconnect</Button>

        </StackPanel>

        <TextBlock Grid.Row="2" x:Name="serverReponses"></TextBlock>
    </Grid>
</Window>
